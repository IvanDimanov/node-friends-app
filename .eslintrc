{
  "extends": ["eslint:recommended", "google"],
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },

  "globals": {
    "Promise": true,
    "expect": true,
    "should": true
  },

  "rules": {
    "no-invalid-this": 0,
    "max-len": [2, 130, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }]
  }
}
