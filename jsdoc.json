{
  "source": {
    "include": ["./"],
    "exclude": ["./node_modules", "./swagger-ui-dist"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": ".+\\spec.js$"
  },
  "opts": {
    "recurse": true,
    "destination": "./dist/documentation",
    "template": "./node_modules/better-docs"
  },
  "tags": {
    "allowUnknownTags": ["category", "swagger"]
  },
  "plugins": [
    "node_modules/better-docs/category"
  ]
}
