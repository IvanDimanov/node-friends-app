{
  "version": 2,
  "alias": "node-friends-app.now.sh",
  "builds": [
    { "src": "./backend/index.js", "use": "@now/node-server" },
    { "src": "./package.json", "use": "@now/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },

    { "src": "/_/test-coverage", "dest": "/coverage/index.html" },
    { "src": "/_/test-coverage/(.*)", "dest": "/coverage/$1" },

    { "src": "/_/documentation", "dest": "/documentation/index.html" },
    { "src": "/_/documentation/(.*)", "dest": "/documentation/$1" },

    { "src": "/(.*)", "dest": "/readme.html" }
  ]
}
