{
  "name": "node-friends-app",
  "version": "0.0.1",
  "description": "Production ready Node API with docs, tests, and coverage",
  "readme": "Readme.md",
  "license": "MIT",
  "authors": [
    "Ivan Dimanov <node-friends-app@idimanov.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanDimanov/node-friends-app.git"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "NODE_ENV=test mocha",
    "watch-test": "NODE_ENV=test mocha --watch",
    "test-coverage": "NODE_ENV=test istanbul cover --report=html --report=text --dir=./dist/coverage _mocha",
    "generate-documentation": "jsdoc **/*.js --destination ./dist/documentation",
    "prebuild": "rimraf ./dist && mkdirp ./dist && npm run lint && npm run test-coverage && npm run generate-documentation",
    "build": "marked --input=./Readme.md --output=./dist/readme.html",
    "now-build": "npm run build && node ./utils/fixCoveragePaths",
    "deploy": "now --target production",
    "local-development": "nodemon ./backend",
    "prepush": "npm run lint"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "pg": "7.9.0",
    "pg-hstore": "2.3.2",
    "sequelize": "5.5.0",
    "sequelize-cli": "5.4.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "chai-string": "1.5.0",
    "eslint": "5.16.0",
    "eslint-config-google": "0.12.0",
    "husky": "1.3.1",
    "istanbul": "0.4.5",
    "jsdoc": "3.5.5",
    "marked": "0.6.2",
    "mkdirp": "0.5.1",
    "mocha": "6.1.3",
    "nodemon": "1.18.11",
    "rimraf": "2.6.3",
    "sinon": "7.3.1",
    "yargs": "13.2.2"
  }
}
